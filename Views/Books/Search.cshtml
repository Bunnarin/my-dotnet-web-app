@model MyWebApp.Models.Book
@{
}
<form method="post" asp-controller="Books" asp-action="Search">
    <input asp-for="Title"/>
    <input type="submit" value="Submit" />
</form>
<div>
    <h2>Search Results</h2>
    @if (Model != null)
    {
        <p>Book Title: @Model.Title</p>
    }
    else
    {
        <p>No results found.</p>
    }
</div>